<div class="container">
  <div class="row">
  <div class="col-xs-12"><h1>REGISTER HERE</h1></div>
  </div>
  <div class="row">
  <div class="col-md-5">
   <div class="row">
      <div class="col-xs-12"><p class="hidden-xs ran">One account is all you need...</p><p class="hidden-xs">Don't miss out!!</p></div>
      <div class="col-xs-12"><p class="hidden-xs lap"><img src="images/job.jpg"></p></div>
  </div>
  </div>
  <div class="col-xs-12 col-md-6">

     <form method="post" action="/register" id="form">
     {{#if errors}}
        {{#each errors}}
           <div class="col-xs-12 alert alert-danger">{{msg}}</div>
        {{/each}}

     {{/if}}
        <div class="form-group"> 
        <label for="name">Name</label>
        <div class="row">     
            <div class="col-xs-6">
              <input type="text" name="firstname" class="form-control" placeholder="First">
            </div>
            <div class="col-xs-6">
              <input type="text" name="lastname" class="form-control" placeholder="Last" >
            </div>
            </div>
        </div>
        <div class="form-group">
           <label for="username">Choose your username</label>
           <input type="text" name="username" class="form-control" placeholder="Username">
        </div>
         <div class="form-group">
           <label for="e-mail">Enter your current e-mail address</label>
           <input type="text" name="email" class="form-control" placeholder="E-mail">
        </div>
          <div class="form-group">
            <label for="gender">Gender</label>
            <select class="form-control" name="gender">
                <option>Male</option>
                <option>Female</option>
                <option>Other</option>
            </select>
        </div>

        <div class="form-group">
           <label for="password">Create a password</label>
           <input type="password" name="password" class="form-control" >
        
        </div>
        <div class="form-group">
           <label for="re_password">Confirm your password</label>
           <input type="password" name="re_password" class="form-control">

        </div>
      
        <button type="submit" class="btn btn-primary">Register</button>
     </form>

  </div>
  </div>
</div>